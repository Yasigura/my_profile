@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');
@import url('animation.css');

body {
    background: rgb(15, 15, 15);
    font-family: "Quicksand", sans-serif;
    font-weight: 200;
    font-style: normal;
    height: 400px;
    animation: fadeIn 0.8s ease forwards;
}


.cont {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.about h2 {
    display: flex;
    flex-direction: column;
    gap: 5px;
    animation: slideUp 0.4s cubic-bezier(.12,.8,0,.98)
}

.about {
    display: flex;
    flex-direction: column;
    gap: 0px;
    animation: slideUp 1s cubic-bezier(.12,.8,0,.98)
}

.button {
    justify-content: center;
    align-content: center;
    width: 200px;
    height: 40px;
    margin:10px 0px ;
    padding: 10px;
    border: none;
    font-family: "Quicksand", sans-serif;
    font-size: 16px;
    background-color: inherit;
    border-radius: 20px;
    font-weight: 600;
    color: #ffffff40;
    box-shadow: 0 0 0 2px #ffffff20;
    cursor: pointer;
    overflow: hidden;
    animation: slideUp 0.6s cubic-bezier(.12,.8,0,.98);
    transition: all 0.6s cubic-bezier(0.23, 1, 0.320, 1);
}

.button:hover {
  box-shadow: 0 0 0 3px #ffffff60;
  color: #ffffff;
}

a {
    color: rgba(2559, 255, 255, 0.9);
    font-size: 24px; 
    text-shadow:1px 1px 15px rgba(0, 0, 0, 0.6);
    text-decoration: none;
    transition: all 0.2s cubic-bezier(.1,.74,.74,1)
}

a:hover {
    color: rgba(255, 255, 255, 0.2);
    text-shadow:0px 0px 0px black;
    transition: all 0.3s cubic-bezier(.1,.74,.74,1)
}

#myicon {
    width: 200px;
    border-radius: 20px;
    box-shadow: 2px 2px 14px;
    animation: slideUp 0.7s cubic-bezier(.12,.8,0,.98)
}